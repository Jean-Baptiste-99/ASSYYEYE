                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/circleimageview410_xiaomi"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/xiaomi"
                            android:layout_gravity="center_horizontal"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="2dp"
                            android:layout_margin="10dp" />

                        <TextView
                            android:id="@+id/textView21_xia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Xiaomi" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/circleimageview410_nike"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/nike"
                            android:layout_gravity="center_horizontal"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="2dp"
                            android:layout_margin="10dp" />

                        <TextView
                            android:id="@+id/textView21_nike"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Nike" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Cprod_red_moin"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#DCDCDC"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
