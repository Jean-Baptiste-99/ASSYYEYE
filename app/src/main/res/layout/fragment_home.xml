                                android:layout_gravity="center_vertical"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/ic_search"
                                android:drawableStart="@drawable/ic_search"/>

                        </androidx.cardview.widget.CardView>

                        <!--androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerImageSilder2"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:foregroundGravity="center"
                            android:layout_centerInParent="true"
                            android:layout_margin="15dp"
                            android:overScrollMode="never"
                            android:clipToPadding="false"
                            android:layout_below="@+id/cd"
                            android:layout_marginTop="20dp"/-->


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#DCDCDC"
                android:id="@+id/recent_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DCDCDC"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connectez - vous pour plus d'expérience "
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button3_conn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@android:color/white"
                        android:background="@color/colorPrimaryDark"
                        android:text="S' inscrire" />

                    <TextView
                        android:id="@+id/textView14_conn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Se connecter   ->"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Cprod"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:src="@drawable/prod4" />

                        <TextView
                            android:id="@+id/textViewpro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Catalogue des produits"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Cann"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:src="@drawable/image9" />

                        <TextView
                            android:id="@+id/textViewann"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Oportunités"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
